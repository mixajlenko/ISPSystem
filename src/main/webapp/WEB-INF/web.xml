<web-app version="3.0">
    <display-name>ISPSystem</display-name>

    <!--Welcome page-->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <!--DataBase connection resources-->
    <resource-ref>
        <res-ref-name>jdbc/d6h02davsb03gm</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <filter>
        <filter-name>LanguageFilter</filter-name>
        <filter-class>com.mixajlenko.finaltask.ispsystem.controller.filter.LanguageFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>LanguageFilter</filter-name>
        <url-pattern>/view/language/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>com.mixajlenko.finaltask.ispsystem.controller.filter.AuthorizationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/view/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>com.mixajlenko.finaltask.ispsystem.controller.filter.RoleFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/view/admin/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.mixajlenko.finaltask.ispsystem.controller.servlet.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/view/*</url-pattern>
    </servlet-mapping>

</web-app>
